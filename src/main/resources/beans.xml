		http://www.springframework.org/schema/context 
        http://www.springframework.org/schema/context/spring-context-4.0.xsd">

	<bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
			<list>
				<value>classpath:app.properties</value>
				<value>classpath:mongodb.properties</value>
				<value>classpath:elasticsearch.properties</value>
				<value>classpath:chunker.properties</value>
			</list>
		</property>
	</bean>

	<!-- Ref to the spring container for use in javax.ws.rs.core.Application -->
	<bean id="springApplicationContext" class="uk.gov.ofwat.fountain.util.SpringApplicationContext" />

	<!-- ************************************ Aspects ******************************* -->

	<import resource="classpath:aspect.xml" />

	<tx:annotation-driven transaction-manager="transactionManager" />

	<bean id="dataSource-fountain" class="com.mchange.v2.c3p0.ComboPooledDataSource">
		<property name="jdbcUrl">
			<value>${db.url}</value>
		</property>
		<property name="user">
			<value>${db.user}</value>
		</property>
		<property name="password">
			<value>${db.password}</value>
		</property>
		<property name="driverClass">
			<value>com.mysql.jdbc.Driver</value>
		</property>
		<property name="acquireIncrement">
			<value>1</value>
		</property>
		<property name="maxIdleTime">
			<value>3600</value>
		</property>
		<property name="maxIdleTimeExcessConnections">
			<value>300</value>
		</property>
		<property name="maxPoolSize">
			<value>20</value>
		</property>
		<property name="minPoolSize">
			<value>5</value>
		</property>
		<property name="numHelperThreads">
			<value>5</value>
		</property>
		<property name="unreturnedConnectionTimeout">
			<value>3600</value> <!-- 6 hours -->
		</property>														
	</bean> 

	<bean id="transactionManager"
		class="org.springframework.orm.hibernate4.HibernateTransactionManager"
		p:sessionFactory-ref="sessionFactory">
	</bean>
	
	
	<!-- ************************************************** ** ** ** Post initialisation ** ** ** ************************************************** -->
	
	<bean id="loggerPostInitialisationBean" class="uk.gov.ofwat.fountain.util.LoggerPostInitialisationBean">
